---
import MainLayout from '@/layouts/MainLayout.astro';
import Section from '@/components/ui/Section.astro';
import Card from '@/components/ui/Card.astro';
import { MusicIcon } from 'lucide-react';
---

<MainLayout title="Songs">
  <div class="container mx-auto max-w-5xl px-6 py-20">
    <div class="space-y-20">
      <!-- Header -->
      <section class="max-w-3xl space-y-8">
        <div class="space-y-6">
          <h1 class="text-5xl font-medium tracking-tight md:text-6xl">Music</h1>
          <p class="text-lg leading-relaxed text-muted-foreground md:text-xl">
            What I'm listening to and my favorite tracks.
          </p>
        </div>
      </section>

      <!-- Content -->
      <Section>
        <Card>
          <div
            class="flex flex-col items-center justify-center space-y-4 py-16 text-center"
          >
            <div
              class="flex size-16 items-center justify-center rounded-full bg-muted/50"
            >
              <MusicIcon className="size-8 text-muted-foreground" />
            </div>
            <p class="text-sm text-muted-foreground">Coming soon...</p>
          </div>
        </Card>
      </Section>
    </div>
  </div>
</MainLayout>
