---
import MainLayout from '@/layouts/MainLayout.astro';
import Section from '@/components/ui/Section.astro';
import Badge from '@/components/ui/Badge.astro';
import Card from '@/components/ui/Card.astro';
import { RESUME_DATA } from '@/data/resume-data';
import { MailIcon } from 'lucide-react';
---

<MainLayout>
  <div class="container mx-auto max-w-5xl px-6 py-20">
    <div class="space-y-20">
      <!-- Hero -->
      <section class="max-w-3xl space-y-8">
        <div class="space-y-6">
          <h1 class="text-5xl font-medium tracking-tight md:text-6xl">
            {RESUME_DATA.name}
          </h1>
          <p class="text-lg leading-relaxed text-muted-foreground md:text-xl">
            {RESUME_DATA.about}
          </p>
        </div>

        <div class="flex flex-wrap gap-2">
          {RESUME_DATA.skills.map((skill) => <Badge>{skill}</Badge>)}
        </div>

        <div class="flex flex-wrap gap-x-6 gap-y-3 text-sm">
          {
            RESUME_DATA.contact.email && (
              <a
                href={`mailto:${RESUME_DATA.contact.email}`}
                class="inline-flex items-center gap-2 text-muted-foreground transition-colors hover:text-foreground"
              >
                <MailIcon className="size-4" />
                <span>Email</span>
              </a>
            )
          }
          {
            RESUME_DATA.contact.social.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-muted-foreground transition-colors hover:text-foreground"
              >
                <social.icon className="size-4 fill-current" />
                <span>{social.name}</span>
              </a>
            ))
          }
        </div>
      </section>

      <!-- Work -->
      {
        RESUME_DATA.work.length > 0 && (
          <Section title="Work">
            <div class="space-y-3">
              {RESUME_DATA.work.map((work) => (
                <Card href={work.link}>
                  <div class="space-y-3">
                    <div class="flex items-start justify-between gap-4">
                      <div class="flex-1 space-y-1">
                        <h3 class="font-medium text-foreground">
                          {work.company}
                        </h3>
                        <p class="text-sm text-muted-foreground">
                          {work.title}
                        </p>
                      </div>
                      <span class="whitespace-nowrap text-sm text-muted-foreground">
                        {work.start}â€”{work.end}
                      </span>
                    </div>
                    <p class="text-sm leading-relaxed text-muted-foreground">
                      {work.description}
                    </p>
                  </div>
                </Card>
              ))}
            </div>
          </Section>
        )
      }

      <!-- Skills -->
      <div class="grid gap-16 md:grid-cols-2">
        <Section title="Languages">
          <div class="flex flex-wrap gap-2">
            {RESUME_DATA.languages.map((lang) => <Badge>{lang}</Badge>)}
          </div>
        </Section>

        <Section title="Tools">
          <div class="flex flex-wrap gap-2">
            {RESUME_DATA.tools.map((tool) => <Badge>{tool}</Badge>)}
          </div>
        </Section>
      </div>
    </div>
  </div>
</MainLayout>
