{
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["next", "next/core-web-vitals", "prettier", "eslint-config-prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": "warn"
    }
}
